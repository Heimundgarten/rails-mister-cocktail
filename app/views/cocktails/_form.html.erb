<div class="card my-5">
<%= form_for(@cocktail, html: { class: "p-3" }) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :ulr, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end  %>

</div>
